@model Teatcher

@{
    ViewData["Title"] = "تعديل معلم";
}

        <div class="card card-default m-3">
             <form asp-action="Edit">

              <div class="p-3 d-flex justify-content-between border" style="background-color: #f8f9fa;">
            <div class="card-title ">تعديل معلم</div>

            <div>
            <input type="submit" value="تعديل"  class="btn   mr-auto btn text-white bg-gradient-primary btn-xs" style="width:100px;height:40px;font-size:17px;"/>

            </div>
          </div>
          <!-- /.card-header -->
          <div class="card-body">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                  <label asp-for="SchoolId">المدرسة</label>
                  <select asp-for="SchoolId"  class="form-control select2" style="width: 100%;">
                
                        @foreach (var item in ViewBag.Schools)
                        {
                       <option value="@item.Id">@item.Name</option>
                        }
                  </select>
                  <span asp-validation-for="SchoolId" class="text-danger"></span>
                </div>

                  <div class="form-group">
                    <label asp-for="Name">اسم المعلم</label>
                    <input type="text" asp-for="Name" class="form-control" id="name" placeholder="اسم المعلم">
                      <span asp-validation-for="Name" class="text-danger"></span>
                  </div>
                     <div class="form-group">
                    <label asp-for="Name">رقم بطاقة الحضور</label>
                    <input type="text" asp-for="CardNumber" class="form-control" id="name" placeholder="رقم بطاقة الحضور">
                      <span asp-validation-for="CardNumber" class="text-danger"></span>
                  </div>

              </div>
              <!-- /.col -->
              <div class="col-md-6">
                   <div class="form-group">
                    <label asp-for="Phone">رقم الهاتف</label>
                    <input type="text"  asp-for="Phone" class="form-control" id="name" placeholder="رقم الهاتف">
                     <span asp-validation-for="Phone" class="text-danger"></span>
                  </div>
                <!-- /.form-group -->
                   <div class="form-group">
                    <label asp-for="Email">البريد الإلكتروني</label>
                    <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" placeholder="البريد الإلكتروني">
                     <span asp-validation-for="Email" class="text-danger"></span>
                  </div>

                    <div class="form-group">
                    <label class="text-white" >save</label>
                  </div>

                </div>
                <!-- /.form-group -->
              </div>

              <!-- /.col -->
            </div>
                 </form>
          </div>


