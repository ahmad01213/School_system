@model Teatcher

@{
    ViewData["Title"] = "Add a new cinema";
}

        <div class="card card-default m-3">

              <div class="p-3 d-flex justify-content-between border" style="background-color: #f8f9fa;">
            <div class="card-title ">حذف مدرسة</div>

            <div>
             <form asp-action="Delete">

            <input type="submit" value="تأكيد الحذف"  class="btn mr-auto btn text-white bg-gradient-danger btn-xs" style="width:130px;height:40px;font-size:17px;"/>
            </form>
            </div>
          </div>
          <!-- /.card-header -->
          <v class="card-body">

                <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                  <label asp-for="SchoolId">المدرسة</label>
                  <select disabled asp-for="SchoolId"  class="form-control select2" style="width: 100%;">
                
                        @foreach (var item in ViewBag.Schools)
                        {
                       <option value="@item.Id">@item.Name</option>
                        }
                  </select>
                </div>

                  <div class="form-group">
                    <label asp-for="Name">اسم المعلم</label>
                    <input readonly type="text" asp-for="Name" class="form-control" id="name" placeholder="اسم المعلم">
                  </div>
                     <div class="form-group">
                    <label asp-for="Name">رقم بطاقة الحضور</label>
                    <input type="text" asp-for="CardNumber" class="form-control" id="name" placeholder="رقم بطاقة الحضور">
                  </div>

              </div>
              <!-- /.col -->
              <div class="col-md-6">
                   <div class="form-group">
                    <label asp-for="Phone">رقم الهاتف</label>
                    <input readonly type="text"  asp-for="Phone" class="form-control" id="name" placeholder="رقم الهاتف">
                  </div>
                <!-- /.form-group -->
                   <div class="form-group">
                    <label asp-for="Email">البريد الإلكتروني</label>
                    <input readonly type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" placeholder="البريد الإلكتروني">
                  </div>


                </div>
                <!-- /.form-group -->
              </div>

              <!-- /.col -->
            </div>
                 </>
          </div>


