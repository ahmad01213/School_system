@using School_Management_System.Data.ViewModels
@model IEnumerable<AttendanceDetail>



@{
    ViewData["Title"] = "الحضور";
}

<div class="col-12">
<div class="card m-3">

      <div class="p-3 d-flex justify-content-between border" style="background-color: #f8f9fa;">
      <h3 class="card-title">الحضور</h3>
                  
          
          </div>
   <!-- /.card-header -->
   <div class="card-body">

      <form action="Index">
           <div class="row">
              <div class="col-md-4">
                
                 <div class="form-group">
                  <label for="SchoolId">المدرسة</label>
                  <select name="SchoolId"  class="form-control select2" style="width: 100%;">
                        @foreach (var item in ViewBag.Schools)
                        {
                         <option value="@item.Id">@item.Name</option>
                        }
                  </select>

                </div>
                </div>

    

            <div class="col-md-4">

                <div class="form-group">
                    <label>
                       اختر التاريخ
                    </label>
                    <input name="Date" id="hijri-picker" type="date" class="form-control" />
                </div>

                <div class="d-flex justify-content-end">
                     <input type="submit" value="بحث" class="btn btn-secondary mb-3 float-left"/>
                </div>

                </div>

               <div class="m-3">

               </div> 

       </div>
      </form>


      <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
         <div class="row">
            <div class="col-sm-12">
               <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                  <thead>
                     <tr role="row">
                        <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="اسم المدرسة: activate to sort column descending" style="width: 166.484px;">م</th>
                        <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="اسم المدرسة: activate to sort column descending" style="width: 166.484px;">اسم</th>
                        <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="اسم المدرسة: activate to sort column descending" style="width: 166.484px;">رقم الحضور</th>
                        <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="اسم المدرسة: activate to sort column descending" style="width: 166.484px;">الحضور</th>
                        <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="المدينة: activate to sort column ascending" style="width: 98.1875px;">تعديل</th>
                     </tr>
                  </thead>
                  <tbody>
                 
                 @foreach (var item in Model)
                 {
                     <tr role="row" class="odd">
                        <td>1</td>
                        <td>@item.Teatcher.Name</td>
                        <td>@item.Status</td>
                     <td><span class="badge bg-success" style="width:80px;">حاضر</span></td>
                            <td class="d-flex align-content-between align-items-center">
                      </td>
                     </tr>
                 }     



                  </tbody>
      
               </table>
               <br />



            </div>
         </div>
       
      </div>
   </div>
   <!-- /.card-body -->
</div>
<!-- /.card -->
</div>
