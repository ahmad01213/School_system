@model Room

@{
    ViewData["Title"] = "إضافة قاعة";
}

        <div class="card card-default m-3">
             <form asp-action="Create">

             <div class="p-3 d-flex justify-content-between border" style="background-color: #f8f9fa;">
            <div class="card-title ">إضافة قاعة</div>

            <div>
            <input type="submit" value="حفظ"  class="btn   mr-auto btn text-white bg-gradient-primary btn-xs" style="width:100px;height:40px;font-size:17px;"/>
            </div>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 <div class="row">
              <div class="col-md-6">

                  <div class="form-group">
                  <label asp-for="SchoolId">المدرسة</label>
                  <select asp-for="SchoolId"  class="form-control select2" style="width: 100%;">
                
                        @foreach (var item in ViewBag.Schools)
                        {
                       <option value="@item.Id">@item.Name</option>
                        }
                  </select>
                  <span asp-validation-for="SchoolId" class="text-danger"></span>

                </div>

                  <div class="form-group">
                  <label asp-for="SubjectId">المادة</label>
                  <select asp-for="SubjectId"  class="form-control select2" style="width: 100%;">
                
                        @foreach (var item in ViewBag.Subjects)
                        {
                       <option value="@item.Id">@item.Name</option>
                        }
                  </select>
                  <span asp-validation-for="SubjectId" class="text-danger"></span>

                </div>

            
                </div>
              <div class="col-md-6">
 <!-- /.form-group -->
                  <div class="form-group">
                    <label asp-for="Name">اسم القاعة</label>
                    <input type="text" asp-for="Name" class="form-control" id="exampleInputEmail1" placeholder="اسم القاعة">
                     <span asp-validation-for="Name" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                    <label asp-for="RoomId">رقم القاعة</label>
                    <input type="text" asp-for="RoomId" class="form-control" id="exampleInputEmail1" placeholder="رقم القاعة">
                     <span asp-validation-for="RoomId" class="text-danger"></span>
                  </div>
                 </div>              </div>

              <!-- /.col -->
            </div>
                 </form>
          </div>


