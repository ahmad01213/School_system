@model Room

@{
    ViewData["Title"] = "حذف قاعة";
}
        <div class="card card-default m-3">

              <div class="p-3 d-flex justify-content-between border" style="background-color: #f8f9fa;">
            <div class="card-title ">حذف قاعة</div>

            <div>
             <form asp-action="Delete">

            <input type="submit" value="تأكيد الحذف"  class="btn mr-auto btn text-white bg-gradient-danger btn-xs" style="width:130px;height:40px;font-size:17px;"/>
            </form>
            </div>
          </div>
    <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 <div class="row">
              <div class="col-md-6">

                  <div class="form-group">
                  <label asp-for="SchoolId">المدرسة</label>
                  <select disabled asp-for="SchoolId"  class="form-control select2" style="width: 100%;">
                
                        @foreach (var item in ViewBag.Schools)
                        {
                       <option value="@item.Id">@item.Name</option>
                        }
                  </select>

                </div>

                  <div class="form-group">
                  <label asp-for="SubjectId">المادة</label>
                  <select disabled asp-for="SubjectId"  class="form-control select2" style="width: 100%;">
                
                        @foreach (var item in ViewBag.Subjects)
                        {
                       <option value="@item.Id">@item.Name</option>
                        }
                  </select>

                </div>

            
                </div>
              <div class="col-md-6">
                  <div class="form-group">
                    <label asp-for="Name">اسم القاعة</label>
                    <input readonly type="text" asp-for="Name" class="form-control" id="exampleInputEmail1" placeholder="اسم القاعة">
                     <span asp-validation-for="Name" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                    <label asp-for="RoomId">رقم القاعة</label>
                    <input readonly type="text" asp-for="RoomId" class="form-control" id="exampleInputEmail1" placeholder="رقم القاعة">
                  </div>
                 </div>              </div>
            </div>

              <!-- /.col -->
            </div>
                 </>
          </div>


